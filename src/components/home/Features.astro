---
import { Icon } from "astro-icon/components"
import { getCollection } from "astro:content"

const features = await getCollection("features")
---

<section
  class="flex flex-col items-center border-t-2 py-10 gap-10"
  aria-label="Features Banner"
>
  <h2 class="text-2xl lg:text-4xl font-bold">
    I build fast, sleek, modern websites.
  </h2>
  <ul class="flex gap-10 justify-center">
    {
      features.map(({ data }) => (
        <li class="flex flex-col gap-2 items-center">
          <Icon name={data.icon} class="size-20" />
          <h3 class="text-xl lg:text-3xl font-display font-semibold">
            {data.title}
          </h3>
          <p>{data.description}</p>
        </li>
      ))
    }
  </ul>
</section>
